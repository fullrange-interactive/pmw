extends layout

block content
    script(src='/javascripts/jquery-2.0.3.js')
    script(src="/javascripts/jcanvas.min.js")
    link(rel='stylesheet', href='/stylesheets/sequence.css')
    h1 Nouvelle Séquence
    .row
        .span4
            .well.slide-library
                ul.thumbnails
                    each slide in slides
                        li
                            div.slidebox(id=slide.id)
                                div.renderer_wrapper
                                    div.renderer_canvas.simulation
                                 p(title=slide.name)=slide.name
        .span8
            #renderer
    .row
        #mainSequence.span12
            #scrubber
    .row
        button#save.btn.btn-primary.span2(title="Sauvegarder",type="button")
            i.icon-ok-sign.icon-white
            |  Sauvegarder
        a#cancel.btn.btn-danger.span2(title="Annuler",href='/')
            i.icon-remove-sign.icon-white
            |  Annuler
    #modalWindow.hero-unit
        h1 Nouvelle séquence
        p
            .form-horizontal
                .control-group
                    label.control-label(for='lengthValue') Durée:
                    .controls
                        .input-append
                            input.input-mini#lengthValue(type='number',placeholder='###',value='1')
                            select.input-small#lengthUnit
                                option(value='3600',selected=1) Heure(s)
                                option(value='60') Minute(s)
                                option(value='1') Seconde(s)
                .control-group
                    .controls
                        a#okCreate.btn.btn-primary OK
                        a#cancelCreate.btn(href='/') Annuler
    #modalWindow2.hero-unit
        h1 Sauvegarder
        p
        form#saveForm
            fieldset
                .input-append
                    input#fileName.span4(type='text',placeholder='Choisir un nom')
                    button#okSave.btn.btn-primary(type='submit') OK
                    a#cancelSave.btn Annuler
        
    script(src='/javascripts/jquery-ui-1.10.3.custom.js')
    script(src='/javascripts/jquery.marquee.js')
    script(src='/javascripts/jquery.colorPicker.min.js')
    script(src='/bootstrap/js/bootstrap-datetimepicker.min.js')
    script(src='/bootstrap/js/bootstrap-fileupload.min.js')
    script(src='/javascripts/renderer_new.js')
    script(src='/javascripts/relems/marquee.js')
    script(src='/javascripts/relems/mire.js')
    script(src='/javascripts/relems/snowfall.js')
    script(src='/javascripts/relems/counter.js')
    script(src='/javascripts/relems/staticImage.js')
    script(src='/javascripts/relems/video.js')
    script(src='/javascripts/relems/staticText.js')
    script(src='/javascripts/relems/color.js')
    script(src='/javascripts/relems/drawing.js')
    script(src='/javascripts/relems/date.js')
    script(src='/javascripts/relems/time.js')
    script(src='/javascripts/relem_extensions.js')
    script(src='/javascripts/jquery.ui.fontSelector.js')
