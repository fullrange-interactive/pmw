.content-panel
	border-left 1px solid #eee

.thumbnail
	position relative

.clear
	clear both

.group
	width 100%
	margin-bottom 20px

.content-group-content h5
	clear both

.thumbnail.window
	margin-bottom 0
	cursor default
	float left

.renderer_wrapper
	padding 0
	margin 0
	position relative

.thumbnail > p
	text-overflow: ellipsis;
	width: 100%;
	white-space: nowrap;
	overflow: hidden;
	margin 0

p.ip
	font-size 10px
	color #888	
	text-overflow ellipsis
	display block

.thumbnail > p.windowId
	font-size 10px
	color #888

.unitlabel
	font-size 0.25em
	line-height 0.25em
	padding-top 0.25em

.connected
	background-color #77ff77

.thumbnail > .debug-info > p
	font-size 9px
	line-height 15px
	vertical-align bottom
	margin-bottom 0

.slide-actions
	text-align right

.btn-delete-slide 
	color #ee0000

.viewer_wrapper
	position relative
	
.slide, .window
	cursor default

.content-panel
	@media (min-width: 767px)
		max-height 800px
		overflow scroll

#slidesContainer .folder.row
	margin-left 0
	margin-right 0

#slidesContainer h3.folderName
	margin-top 3px
	margin-bottom 3px

#slidesContainer .folderName .groupButton
	display block
	text-align left

.thumbnail
/*	-webkit-transition: background-color 200ms linear, box-shadow 200ms linear;
	-moz-transition: background-color 200ms linear, box-shadow 200ms linear;
	-o-transition: background-color 200ms linear, box-shadow 200ms linear;
	-ms-transition: background-color 200ms linear, box-shadow 200ms linear;
	transition: background-color 200ms linear, box-shadow 200ms linear;*/
	cursor pointer

.ui-draggable-dragging
	min-width 111px

.window-hovered-valid
	background-color #396898
	box-shadow 0 0 10px rgba(0, 100, 201, 0.9)

.window-hovered-invalid
	background-color #f95c5c
	box-shadow 0 0 5px rgba(249, 92, 92, 0.4)

p.xy
	font-size 10px
	text-align right
	color #666

.folderHover
	background-color #77ff77

.right-caret 
	border-bottom 4px solid transparent
	border-top 4px solid transparent
	border-left 4px solid
	display inline-block
	height 0
	vertical-align middle
	width 0

.group-wrapper
	padding 5px
	margin 5px 0 0 -5px
	box-sizing border-box
	border-radius 10px
	border 1px solid #ddd
	transition all linear 0.2s
	position relative

.group-wrapper h2
	margin-top 0

.group-wrapper.hover-group
	background-color rgba(0, 100, 201, 0.2)
	box-shadow 0 0 10px rgba(0, 100, 201, 0.9)

.group-automator
	position absolute
	top 15px
	right 12px
	color #999

.group-automator .name
	padding-right 10px

.group-automator .btn
	color #999
	border none

#debug
	position relative
	top -30px

.debug-info
	display none