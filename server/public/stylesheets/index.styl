.content-panel
	border-left 1px solid #eee

.thumbnail
	position relative

.group
	width 100%
	position relative

.thumbnail.window
	margin-bottom 0
	position absolute
	cursor default

.renderer_wrapper
	padding 0
	margin 0
	position relative

.thumbnail > p
	text-overflow: ellipsis;
	width: 100%;
	white-space: nowrap;
	overflow: hidden;
	margin 0

.thumbnail > p.ip
	font-size 10px
	color #888	

.thumbnail > p.windowId
	font-size 10px
	color #888

.unitlabel
	font-size 0.25em
	line-height 0.25em
	padding-top 0.25em

.connected
	background-color #77ff77

.ip
	font-size 9px

.slide-actions
	text-align right

.btn-delete-slide 
	color #ee0000

.viewer_wrapper
	position relative
	
.slide, .window
	cursor default

.content-panel
	max-height 500px
	overflow scroll

#slidesContainer .folder.row
	margin-left 0
	margin-right 0

#slidesContainer h3.folderName
	margin-top 3px
	margin-bottom 3px

#slidesContainer .folderName .groupButton
	display block
	text-align left

.thumbnail
