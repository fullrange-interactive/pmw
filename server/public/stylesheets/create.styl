editorHeight = 325px

#editorWindow.dragged
	cursor move

#editorWindow
	background-image url('/images/editor/dark_squares.png')
	position relative
	top 0
	left 0
	width 100%
	height editorHeight
	margin-bottom 30px
    box-sizing border-box

.grid_wrapper
	margin auto
	height 100%
	background-size auto 100%
	background-position 50% 50%
	position relative
	z-index 99999999
	opacity 0.6
	border none
	pointer-events none

table
	border-collapse collapse

.mask-image
	pointer-events none

td
	margin 0
	padding 0
	border 1px dashed white
	
td.mask     
	background-color black !important
	margin 0
	padding 0

.layer
	position absolute
	overflow hidden
	cursor move

.thumbnail
	margin-top 5px
	margin-bottom 5px

borderWidth = 4px
halfBorderwidth = 2px

#properties textarea
	font-size 10px

/*#properties
	display none*/

.rElemHover
	border halfBorderwidth dotted white
	margin -2px 0 0 -2px

.rElemSelected
	border borderWidth dotted white
	margin -4px 0 0 -4px

.dragged
	cursor move

.resizeCornerSE
	cursor se-resize

.resizeCornerSW
	cursor sw-resize

.resizeCornerNE
	cursor ne-resize

.resizeCornerNW
	cursor nw-resize

.resizeCornerN
	cursor n-resize

.resizeCornerS
	cursor s-resize

.resizeCornerW
	cursor w-resize

.resizeCornerE
	cursor e-resize

marquee, .marqu
	font-size 200px
	font-family ChampagneAndLimousines
	height 100%
	position: absolute;
	top: 0;
	left: 0;
	line-height 100%
	white-space: nowrap
	text-align center

.flipped
	display block 
	-moz-transform matrix(-1, 0, 0, 1, 0, 0)
	-webkit-transform matrix(-1, 0, 0, 1, 0, 0)
	-o-transform matrix(-1, 0, 0, 1, 0, 0)
	
#modalWindow
	position absolute
	left 25%
	width 50%
	top 200px
	z-index 100000000
	display none
	box-shadow 0px 0px 100px #000000

#fileUpload
	display none	
	
#gallery, #video
	height 235px
	overflow auto
	display none
    background-color #fff

#layer
	height 150px
	overflow-y scroll

#layer > div
	display block
	margin 2px
	border 1px solid #666666
	background-color white
	height 30px
	line-height 30px
	cursor pointer
	font-size 11px

#layer > div.locked
	background-color #ccc

#layer > div.locked .glyphicon-lock
	float right
	margin-top 8px
	
#layer > div .glyphicon-trash
		float right
		margin-top 8px

#layer div.selected
	background-color rgba(70,240,70,0.5)
	
#layer > div > img
	max-height 80%

#layer > div > i
	margin 0 5px
	
#gallery .thumbnail, #video .thumbnail
	height 55px
	width 50px
	padding 5px
	margin 5px
	display inline-block
	cursor pointer
	vertical-align middle
	position relative
	
#gallery .thumbnail a, #video .thumbnail a
	position absolute
	bottom 3px
	left 3px

#gallery .thumbnail	> img, #video .thumbnail > video
	max-width 50px
	max-height 50px
	float none

#gallery .selectedImage, #video .selectedVideo
	border-color #44ef44
	box-shadow 0 0 4px rgba(70,240,70,0.5)
	background-color rgba(70,240,70,0.2)

#dropIndicator
	position absolute
	left 0
	top 0
	right 0
	bottom 0
	background-color rgba(0,0,0,0.5)
	z-index 1000000000
	display none
	pointer-events none
	
#modalWindow2
	display block
	visibility visible
	box-shadow none
	
#previews
	display none