#modalWindow
    display none

.popover.bottom
	z-index 99999999
	margin-top 30px

.popover .popover-content
	z-index 99999999

.modalWindow
    position absolute
    left 25%
    width 50%
    top 200px
    z-index 1000000

.modalWindow:before
    content ' '
    position fixed
    left 0
    top 0
    right 0
    bottom 0
    background-color rgba(0,0,0,0.8)
    z-index -10
    
.slide-library
    height 300px
    max-height 300px
    overflow auto

.slide-library .thumbnails li
    display inline-block
    margin 5px
    
.slidebox
    background-color #f8f8f8
    border 1px solid #e7e7e7
    border-radius 5px
    padding 5px
    margin 4px
    cursor pointer
	position relative

.slidebox p
    width 100%
    font-size 0.6em
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    text-align center
	position relative

.slidebox .renderer_wrapper
    width 43px
    height 34px
    position relative
	
