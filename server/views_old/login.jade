extends layout-loggedout

block content
    script(src='/javascripts/jquery-2.0.3.js')
    .login-block
        h1 Bienvenue
        p Veuillez vous connecter
        script(type='text/javascript').
            $(document).ready(function (){
                $("#username").focus();
            });
        form.form-horizontal(id="login", method="POST", action="/login")
            .control-group
                .control-label
                    label(for='username') Username
                .controls
                    input#username(type='text', name='username')
            .control-group
                .control-label
                    label(for='password') Password
                .controls
                    input#password(type='password', name='password')
            .control-group
                .controls
                    button.btn(type="submit") Log in